<project name="Test" default="testCompile">
    <property name="dist.classes" value="E:/TestWork/Test/target/classes" />
    <target name="testCompile">
        <javac srcdir="E:/TestWork/Test/src"
            destdir="${dist.classes}"
            debug="true"
            encoding="utf-8">
            <!--<compilerarg value="-Xlint:unchecked"/>-->
            <classpath refid="testpath" />
        </javac>
    </target>

    <path id="testpath">
        <fileset dir="E:/TestWork/Test/lib">
            <include name="**/*.jar"/>
        </fileset>
        <pathelement location="${dist.classes}"/>
    </path>
    <target name="run">
        <java classname="XMLFixer" classpath="./classes">
            <!--<arg value="-h"/>-->
            <classpath refid="testpath" />
        </java>
    </target>
    <target name="test">
        <java classname="ocr.OCR" classpath="./target/classes" fork="true" >
            <!--<arg value="-h"/>-->
            <classpath refid="testpath" />
        </java>
    </target>
</project>
